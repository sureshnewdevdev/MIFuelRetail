@model RetailMasters.Models.pricechange

@{
    ViewData["Title"] = "Create Price Change";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="fueltypeid" class="form-label">Fuel Type <span class="text-danger">*</span></label>
                            <select asp-for="fueltypeid" class="form-select" asp-items="ViewBag.fueltypeid" required>
                                <option value="">-- Select Fuel Type --</option>
                            </select>
                            <span asp-validation-for="fueltypeid" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="oldprice" class="form-label">Old Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="oldprice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="oldprice" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank if this is the initial price setting</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="newprice" class="form-label">New Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="newprice" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                            </div>
                            <span asp-validation-for="newprice" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="changedate" class="form-label">Change Date</label>
                            <input asp-for="changedate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="changedate" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank to use current date and time</small>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Price Change
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
