@model IEnumerable<RetailMasters.Models.Fueltype>

@{
    ViewData["Title"] = "Fuel Types";
}

<h2>Fuel Types</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Fuel Type</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fueltypeid</td>
                <td>@item.Fueltypename</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Fueltypeid">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Fueltypeid">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Fueltypeid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
