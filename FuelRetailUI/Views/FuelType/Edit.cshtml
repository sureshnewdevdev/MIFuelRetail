@model RetailMasters.Models.Fueltype

<h2>Edit Fuel Type</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Fueltypeid" />
    <div class="form-group">
        <label asp-for="Fueltypename"></label>
        <input asp-for="Fueltypename" class="form-control" />
        <span asp-validation-for="Fueltypename" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-warning mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
