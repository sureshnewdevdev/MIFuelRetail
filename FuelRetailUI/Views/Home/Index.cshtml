@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">RetailHub Setup Dashboard</h2>
    <p class="lead">Set up your master data in logical order:</p>

    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            Step 1: Foundational Master Setup
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.ActionLink("Supplier Management", "Index", "Supplier") - Add your suppliers first.</li>
            <li class="list-group-item">@Html.ActionLink("Fuel Types", "Index", "FuelType") - Set fuel categories before pricing.</li>
            <li class="list-group-item">@Html.ActionLink("Valet Types", "Index", "ValetType") - Define valet types.</li>
            <li class="list-group-item">@Html.ActionLink("Role Management", "Index", "Role") - Create user roles.</li>
        </ul>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Step 2: Configure Dependent Modules
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.ActionLink("Site Setup", "Index", "Site") - Assign a supplier to each site.</li>
            <li class="list-group-item">@Html.ActionLink("Valet Pricing", "Index", "ValetPrice") - Set prices for each valet type.</li>
            <li class="list-group-item">@Html.ActionLink("Price Changes", "Index", "PriceChange") - Manage fuel price updates.</li>
        </ul>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            Step 3: User & Communication Setup
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.ActionLink("User Management", "Index", "User") - Assign roles and manage access.</li>
            <li class="list-group-item">@Html.ActionLink("Email Groups", "Index", "EmailGroup") - Define email groups for alerts.</li>
        </ul>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            Optional or Specialized Modules
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.ActionLink("Credit Card Management", "Index", "CreditCard")</li>
            <li class="list-group-item">@Html.ActionLink("Sites (Legacy)", "Index", "sites")</li>
            <li class="list-group-item">@Html.ActionLink("Sites (Backup)", "Index", "Sites1")</li>
        </ul>
    </div>
</div>
