@model IEnumerable<RetailMasters.Models.role>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Role</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.roleid</td>
                <td>@item.rolename</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.roleid">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.roleid">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.roleid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
