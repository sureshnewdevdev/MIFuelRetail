@model RetailMasters.Models.role

<h2>Role Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.roleid</dd>

        <dt class="col-sm-2">Name</dt>
