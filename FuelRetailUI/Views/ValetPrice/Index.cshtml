@model IEnumerable<RetailMasters.Models.Valetprice>

<h2>Valet Prices</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Site</th>
            <th>Valet Type</th>
            <th>Price</th>
            <th>Effective Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Site.Sitecode</td>
                <td>@item.Valettype.Valettypename</td>
                <td>@item.Price</td>
                <td>@item.Effectivedate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Valetpriceid" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Valetpriceid" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Valetpriceid" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
