@model RetailMasters.Models.Valetprice

@{
    ViewData["Title"] = "Create Valet Price";
}

<h2>Create Valet Price</h2>

@* Show any validation errors *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Siteid" class="control-label">Site</label>
        <select asp-for="Siteid" class="form-control" asp-items="ViewBag.siteid">
            <option value="">-- Select Site --</option>
        </select>
        <span asp-validation-for="Siteid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valettypeid" class="control-label">Valet Type</label>
        <select asp-for="Valettypeid" class="form-control" asp-items="ViewBag.valettypeid">
            <option value="">-- Select Valet Type --</option>
        </select>
        <span asp-validation-for="Valettypeid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Effectivedate" class="control-label">Effective Date</label>
        <input asp-for="Effectivedate" class="form-control" type="date" />
        <span asp-validation-for="Effectivedate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
