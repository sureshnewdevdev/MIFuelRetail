@model RetailMasters.Models.Valetprice

@{
    ViewData["Title"] = "Delete Valet Price";
}

<h2>Delete Valet Price</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Site</dt>
    <dd class="col-sm-10">@Model.Site?.Sitecode</dd>

    <dt class="col-sm-2">Valet Type</dt>
    <dd class="col-sm-10">@Model.Valettype?.Valettypename</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Effective Date</dt>
    <dd class="col-sm-10">@Model.Effectivedate</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Valetpriceid" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
