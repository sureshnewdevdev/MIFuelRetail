@model RetailMasters.Models.supplier

@{
    ViewData["Title"] = "Edit Supplier";
}

<h2>Edit Supplier</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="supplierid" />
    <div class="form-group">
        <label asp-for="supdesc"></label>
        <input asp-for="supdesc" class="form-control" />
        <span asp-validation-for="supdesc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
