@model RetailMasters.Models.supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<h2>Supplier Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.supplierid</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.supdesc</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.supplierid" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
