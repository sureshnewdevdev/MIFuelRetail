@model RetailMasters.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Confirm Delete</h2>

<h4>Are you sure you want to delete this supplier?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Supplierid</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Supdesc</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Supplierid" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
