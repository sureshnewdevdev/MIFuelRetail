@model IEnumerable<RetailMasters.Models.supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Supplier</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.supplierid</td>
                <td>@item.supdesc</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.supplierid">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.supplierid">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.supplierid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
