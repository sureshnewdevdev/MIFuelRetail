@model RetailMasters.Models.User

<h2>Create User</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Passwordhash"></label>
        <input asp-for="Passwordhash" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Isactive"></label>
        <input type="checkbox" class="form-check-input" name="isactive" @(Model != null && Model.Isactive == true ? "checked" : "") />


    </div>
    <div class="form-group">
        <label asp-for="Roleid"></label>
        <select asp-for="Roleid" class="form-control" asp-items="ViewBag.roleid"></select>
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
