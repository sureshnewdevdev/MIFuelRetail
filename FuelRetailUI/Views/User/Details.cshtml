@model RetailMasters.Models.user

<h2>User Details</h2>

<dl class="row">
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.username</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.email</dd>

    <dt class="col-sm-2">Is Active</dt>
    <dd class="col-sm-10">@Model.isactive</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.role?.rolename</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.userid" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
