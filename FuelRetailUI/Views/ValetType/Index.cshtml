@model IEnumerable<RetailMasters.Models.valettype>

@{
    ViewData["Title"] = "Valet Types";
}

<h2>Valet Types</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Valet Type</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.valettypeid</td>
                <td>@item.valettypename</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.valettypeid">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.valettypeid">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.valettypeid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
